<service>
    <short>opendct</short>
    <description>opendct</description>

    <!-- SageTV media server port (uploadID) -->
    <port protocol="tcp" port="7818"/>

    <!-- SageTV network encoder communication ports -->
    <port protocol="tcp" port="9000-9100"/>

    <!-- SageTV discovery port -->
    <port protocol="udp" port="8271"/>

    <!-- RTP receiving ports -->
    <port protocol="udp" port="8300-8500"/>

    <!-- Cling HTTP TCP receiving port -->
    <port protocol="tcp" port="8501"/>
</service>